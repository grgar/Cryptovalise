<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginTop="@dimen/text_margin"
                                    android:layout_marginStart="@dimen/text_margin"
                                    android:layout_marginEnd="@dimen/text_margin">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:layout_editor_absoluteY="8dp"
		tools:layout_editor_absoluteX="8dp"
		android:background="@color/cardview_light_background">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/symbol"
			android:layout_marginTop="12dp"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="symbol"
			app:layout_constraintStart_toStartOf="@+id/coinName"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/coinName"
			app:layout_constraintTop_toBottomOf="@+id/symbol"
			tools:text="Coin Name"
			android:textSize="30sp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp"
			/>

		<ImageView
			android:layout_width="48dp"
			android:layout_height="48dp"
			app:srcCompat="@drawable/ic_attach_money_black_24dp"
			android:id="@+id/icon"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="16dp"
			android:scaleType="fitXY"
			android:contentDescription="@string/currency_list_icon_description"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/priceDollars"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/coinName"
			app:layout_constraintStart_toStartOf="@+id/coinName"
			tools:text="$10,000"
			android:textSize="18sp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/pricePounds"
			tools:text="£10,000"
			app:layout_constraintTop_toBottomOf="@+id/priceDollars"
			android:textSize="18sp"
			android:textAlignment="textEnd"
			app:layout_constraintEnd_toEndOf="@+id/priceDollars"
			/>

		<Button
			android:text="@string/graph_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/buttonGraph"
			style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/pricePounds"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp"
			app:layout_constraintBottom_toBottomOf="parent"
			/>

		<Button
			android:text="@string/news_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/buttonNews"
			style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
			app:layout_constraintStart_toEndOf="@+id/buttonGraph"
			android:layout_marginStart="8dp"
			app:layout_constraintTop_toTopOf="@+id/buttonGraph"
			/>

		<Button
			android:text="@string/info_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/buttonInfo"
			style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
			app:layout_constraintStart_toEndOf="@+id/buttonNews"
			android:layout_marginStart="8dp"
			app:layout_constraintTop_toTopOf="@+id/buttonGraph"
			/>

		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_more_vert_black_24dp"
			android:id="@+id/buttonMore"
			android:background="?android:attr/selectableItemBackgroundBorderless"
			app:layout_constraintEnd_toEndOf="parent"
			android:tint="@android:color/darker_gray"
			android:contentDescription="@string/currency_list_more_description"
			app:layout_constraintStart_toEndOf="@+id/buttonInfo"
			android:layout_marginStart="8dp"
			app:layout_constraintHorizontal_bias="1.0"
			android:padding="12dp"
			app:layout_constraintBottom_toBottomOf="@+id/buttonGraph"
			/>

		<GridLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:columnCount="3"
			android:id="@+id/gridLayout"
			app:layout_constraintStart_toEndOf="@+id/priceDollars"
			android:layout_marginStart="12dp"
			app:layout_constraintTop_toTopOf="@+id/priceDollars"
			app:layout_constraintBottom_toBottomOf="@+id/pricePounds"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintHorizontal_bias="0.1">

			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:id="@+id/deltaHeader1h"
				android:text="@string/delta_1h"
				android:textAlignment="textEnd"
				tools:layout_editor_absoluteY="81dp"
				tools:layout_editor_absoluteX="142dp"
				android:layout_gravity="end"/>

			<TextView
				android:text="@string/delta_7d"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:id="@+id/deltaHeader7d"
				android:textAlignment="textEnd"
				tools:layout_editor_absoluteY="81dp"
				tools:layout_editor_absoluteX="248dp"
				android:layout_gravity="end"/>

			<TextView
				android:text="@string/delta_24h"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:id="@+id/deltaHeader24h"
				android:textAlignment="textEnd"
				tools:layout_editor_absoluteY="81dp"
				tools:layout_editor_absoluteX="190dp"
				android:layout_gravity="end"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/delta1h"
				tools:text="–10"
				android:textSize="18sp"
				tools:layout_editor_absoluteY="100dp"
				tools:layout_editor_absoluteX="150dp"
				android:layout_gravity="end"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/delta24h"
				android:textAlignment="textEnd"
				tools:text="+10"
				android:textSize="18sp"
				tools:layout_editor_absoluteY="100dp"
				tools:layout_editor_absoluteX="210dp"
				android:layout_gravity="end"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/delta7d"
				android:textAlignment="textEnd"
				tools:text="–10"
				android:textSize="18sp"
				tools:layout_editor_absoluteY="100dp"
				tools:layout_editor_absoluteX="256dp"
				android:layout_gravity="end"/>

		</GridLayout>

	</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
