<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              android:divider="?android:attr/dividerHorizontal"
              android:orientation="horizontal"
              android:showDividers="middle"
              tools:context="com.georgegarside.cryptovalise.CurrencyListActivity">

	<android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
	                                        xmlns:tools="http://schemas.android.com/tools"
	                                        android:id="@+id/currencyList"
	                                        android:name="com.georgegarside.cryptovalise.CurrencyListFragment"
	                                        android:layout_width="wrap_content"
	                                        android:layout_height="match_parent"
	                                        app:layoutManager="LinearLayoutManager"
	                                        tools:context="com.georgegarside.cryptovalise.CurrencyListActivity"
	                                        tools:listitem="@layout/currency_list_content"
	                                        android:clipToPadding="false"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<FrameLayout
			android:id="@+id/currencyDetail"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	</RelativeLayout>

</LinearLayout>
